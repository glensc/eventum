# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[package.json]
indent_size = 2

[*.php]
max_line_length = 120

[*.tpl.html]
indent_size = 2

[*.pl]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{sh,xml,json}]
indent_style = tab
indent_size = 4

[templates_c/**]
; Use editor default (possible autodetection).
indent_style =
indent_size =
max_line_length =
trim_trailing_whitespace = false
insert_final_newline = false

[vendor/**]
; Use editor default (possible autodetection).
indent_style =
indent_size =
trim_trailing_whitespace = false
insert_final_newline = false
